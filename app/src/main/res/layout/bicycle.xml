<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:background="@color/global_background"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/header" />

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/big_title_height"
            android:layout_marginLeft="@dimen/global_margin_horizontal"
            android:layout_marginRight="@dimen/global_margin_horizontal"
            android:background="@color/big_title_background"
            android:gravity="center"
            android:text="@string/menu_bicycle"
            android:textColor="@color/global_textcolor"
            android:textSize="@dimen/big_title_text_size"
            android:layout_marginTop="@dimen/global_margin_vertical"/>

        <TextView
            android:layout_marginTop="1dp"
            android:layout_marginLeft="@dimen/global_margin_horizontal"
            android:layout_marginRight="@dimen/global_margin_horizontal"
            android:id="@+id/bicycle_info"
            android:background="@color/main_text_background"
            android:textColor="@color/global_textcolor"
            android:textSize="@dimen/main_text_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp" />

    </LinearLayout>
</ScrollView>